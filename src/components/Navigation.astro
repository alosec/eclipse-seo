<style>
  .desktop-nav {
    display: none;
    gap: var(--space-6);
    align-items: center;
  }

  .desktop-nav a {
    text-decoration: none;
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: var(--transition);
  }

  .desktop-nav a:hover {
    color: var(--color-primary);
  }

  @media (min-width: 768px) {
    .desktop-nav {
      display: flex;
    }
  }
</style>